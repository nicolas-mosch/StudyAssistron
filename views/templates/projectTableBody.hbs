<div class="panel-group" id="accordion" style="width: 100%;">
{{#each chapters}}
  <div class="panel panel-default" style="width: 100%;">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#chapter_{{@index}}">{{title}} <span class="badge">{{tuples.length}}</span></a>
      </h4>
    </div>
    <div id="chapter_{{@index}}" class="panel-collapse collapse" style="width: 100%;">
      <div class="panel-body" style="width: 100%;">
        <table class="chapter-table" style="width: 100%;">
          {{#each tuples}}
            <tr>
              <td
               class="content-cell edit-tuple"
               data-index="{{@index}}"
               data-chapter-index="{{@../index}}"
               data-type="q"
               title="Edit Question"
              >
                {{{q}}}
              </td>
              <td>
                <button
                 data-toggle="confirmation"
                 data-popout="true"
                 data-singleton="true"
                 class="delete-tuple btn"
                 type="button"
                 data-index="{{@index}}"
                 data-chapter-index="{{@../index}}"
                 title="Delete Pair"
                >
                  <span class="glyphicon glyphicon-remove-sign"></span>
                </button><br />
                <button
                 class="edit-tuple btn"
                 type="button"
                 data-type="p"
                 data-index="{{@index}}"
                 data-chapter-index="{{@../index}}"
                 title="Edid predefined answer"
                >
                  <span class="glyphicon glyphicon-list-alt"></span>
                </button>
              </td>
              <td
               class="content-cell edit-tuple"
               data-index="{{@index}}"
               data-chapter-index="{{@../index}}"
               data-type="a"
               title="Edit Answer"
              >
                {{{a}}}
              </td>
            </tr>
          {{/each}}
          <tr>
            <td colspan="3">
              <button id="new-tuple" type="button" class="btn" data-chapter-index="{{@index}}" title="New Tuple (n)"><span class="glyphicon glyphicon-plus" style="margin: 0 auto;"></span></button>
            </td>
          </tr>
      </table>
      </div>
    </div>
  </div>
{{/each}}
</div>
