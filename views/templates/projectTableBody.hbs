<tbody>
{{#each tuples}}
  <tr>
    <td
     class="content-cell edit-tuple"
     data-index="{{@index}}"
     data-type="q"
     title="Edit Question"
    >
      {{{q}}}
    </td>
    <td>
      <button
       data-toggle="confirmation"
       data-popout="true"
       data-singleton="true"
       class="delete-tuple btn"
       type="button"
       data-index="{{@index}}"
       title="Delete Pair"
      >
        <span class="glyphicon glyphicon-remove-sign"></span>
      </button>
      <button
       class="edit-tuple btn"
       type="button"
       data-type="p"
       data-index="{{@index}}"
       title="Edid predefined answer"
      >
        <span class="glyphicon glyphicon-list-alt"></span>
      </button>
    </td>
    <td
     class="content-cell edit-tuple"
     data-index="{{@index}}"
     data-type="a"
     title="Edit Answer"
    >
      {{{a}}}
    </td>
  </tr>
{{/each}}
</tbody>
